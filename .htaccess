# .htaccess - VITA CAST
RewriteEngine On

# Rediriger HTTP vers HTTPS
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^(www\.)?vita-cast\.com\.tn$ [NC]
RewriteRule ^(.*)$ https://vita-cast.com.tn/$1 [R=301,L]

# Rediriger www vers non-www (optionnel mais recommand√©)
RewriteCond %{HTTP_HOST} ^www\.vita-cast\.com\.tn$ [NC]
RewriteRule ^(.*)$ https://vita-cast.com.tn/$1 [R=301,L]

# Rediriger les erreurs 404 vers l'accueil
ErrorDocument 404 https://vita-cast.com.tn/